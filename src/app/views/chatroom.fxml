<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="850.0" prefWidth="1577.0" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <AnchorPane layoutX="33.0" layoutY="33.0" prefHeight="200.0" prefWidth="400.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox fx:id="hb_TopLeft" alignment="CENTER" layoutX="33.0" layoutY="17.0" maxHeight="-Infinity"
                      prefHeight="80.0" prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                      AnchorPane.topAnchor="0.0">
                    <children>
                        <Label fx:id="lbl_listUser" text="Danh sách người dùng">
                            <font>
                                <Font name="System Bold" size="26.0"/>
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
                    </padding>
                </HBox>
                <ListView fx:id="lv_UserList" maxWidth="-Infinity" prefHeight="435.0" prefWidth="450.0"
                          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                          AnchorPane.topAnchor="80.0"/>
            </children>
        </AnchorPane>
        <AnchorPane layoutX="1330.0" layoutY="33.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="400.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox fx:id="hb_TopRight" alignment="CENTER" layoutX="47.0" layoutY="31.0" maxHeight="-Infinity"
                      prefHeight="80.0" prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                      AnchorPane.topAnchor="0.0">
                    <children>
                        <Label fx:id="lb_ChatUser" text="BKChat">
                            <font>
                                <Font name="System Bold" size="26.0"/>
                            </font>
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
                    </padding>
                </HBox>
                <ScrollPane fx:id="sp_ChatBox" fitToHeight="true" fitToWidth="true" layoutX="261.0" layoutY="159.0"
                            prefHeight="200.0" prefWidth="200.0" stylesheets="@../styles/custom-srcollpane.css"
                            AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                            AnchorPane.topAnchor="80.0">
                    <content>
                        <VBox fx:id="vb_ChatBox" prefHeight="690.0" prefWidth="1127.0" styleClass="scroll-pane-inside"/>
                    </content>
                </ScrollPane>
                <HBox fx:id="hb_BottomRight" layoutX="6.0" layoutY="750.0" prefHeight="80.0" prefWidth="200.0"
                      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <children>
                        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="80.0">
                            <children>
                                <MaterialDesignIconView fx:id="btn_ChooseFile" glyphName="PLUS_CIRCLE"
                                                        onMouseClicked="#sendMessage" size="48">
                                    <cursor>
                                        <Cursor fx:constant="HAND"/>
                                    </cursor>
                                    <styleClass>
                                        <String fx:value="avatar--default"/>
                                        <String fx:value="font--MaterialDesign"/>
                                    </styleClass>
                                </MaterialDesignIconView>
                            </children>
                        </HBox>
                        <TextArea fx:id="ta_Message" onKeyPressed="#ta_messageKeyPressed" prefHeight="80.0"
                                  prefWidth="967.0" promptText="Nhập tin nhắn..." styleClass="text-area--transparent"
                                  stylesheets="@../styles/custom-srcollpane.css" wrapText="true" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="24.0"/>
                            </font>
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                            <padding>
                                <Insets bottom="6.0" top="6.0"/>
                            </padding>
                        </TextArea>
                        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="80.0">
                            <children>
                                <MaterialDesignIconView fx:id="btn_SendMessage" glyphName="SEND"
                                                        onMouseClicked="#sendMessage" size="48">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                    <cursor>
                                        <Cursor fx:constant="HAND"/>
                                    </cursor>
                                    <styleClass>
                                        <String fx:value="avatar--default"/>
                                        <String fx:value="font--MaterialDesign"/>
                                    </styleClass>
                                </MaterialDesignIconView>
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </children>
    <styleClass>
        <String fx:value="bg--white"/>
        <String fx:value="border--outside"/>
    </styleClass>
</AnchorPane>
